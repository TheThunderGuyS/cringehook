{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es2017": true
	},
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"rules": {
		"semi": ["error", "always"],
		"curly": ["error", "all"],
		"quotes": ["error", "double", {"allowTemplateLiterals": true}],
		"no-multi-spaces": "error",
		"no-useless-return": "error",
		"yoda": "error",
		"no-var": "error",
		"indent": "error",
		"no-multiple-empty-lines": ["error", {"max": 2, "maxEOF": 1, "maxBOF": 0}],
		"no-trailing-spaces": "error",
		"prefer-const": "error"
	}
}
